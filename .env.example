# Токен основного бота для пользователей (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# Токен админ-бота для управления (создайте отдельного бота у @BotFather)
ADMIN_BOT_TOKEN=your_admin_bot_token_here

# ID администратора для получения уведомлений о заказах
ADMIN_CHAT_ID=123456789

# ID администраторов, которые могут пользоваться админ-ботом (через запятую)
ALLOWED_ADMIN_IDS=123456789,987654321

# URL подключения к PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/cafe_bot

# Уровень логирования
LOG_LEVEL=INFO
